kind: Deployment
apiVersion: apps/v1
metadata:
  name: platform-legacy-codebox
  labels:
    app: platform
    type: legacy-codebox
spec:
  minReadySeconds: 300
  replicas: {{ REPLICAS }}
  selector:
    matchLabels:
      app: platform
      type: legacy-codebox
  progressDeadlineSeconds: 600
  strategy:
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 50%
    type: RollingUpdate

  template:
    metadata:
      labels:
        buildtime: {{ BUILDTIME }}
        app: platform
        type: legacy-codebox
    spec:
      tolerations:
        - key: "type"
          operator: "Equal"
          value: "legacy_codebox"
          effect: "NoSchedule"
      nodeSelector:
        type: legacy_codebox
      terminationGracePeriodSeconds: 330
      securityContext:
        fsGroup: 1000
      volumes:
        - name: script-storage
          hostPath:
            path: /mnt/codebox/storage
        - name: docker-run
          hostPath:
            path: /mnt/codebox/run
{%- if GCP_LOCATIONS %}
  {%- for item in GCP_LOCATIONS.split(',') %}
        - name: {{ item }}-storage-credentials
          secret:
            secretName: {{ item }}-storage-credentials
  {%- endfor %}
{%- endif %}

      containers:
        - name: codebox
          image: {{ IMAGE }}
          volumeMounts:
            - name: script-storage
              mountPath: "{{ DOCKER_SHARED_DIRECTORY }}"
              mountPropagation: Bidirectional
            - name: docker-run
              mountPath: /var/run
{%- if GCP_LOCATIONS %}
  {%- for item in GCP_LOCATIONS.split(',') %}
            - name: {{ item }}-storage-credentials
              mountPath: /secrets/{{ item }}-storage
              readOnly: true
  {%- endfor %}
{%- endif %}
          securityContext:
            privileged: true
            runAsUser: 0
          resources:
            requests:
              cpu: 1000m
          env:
            - name: INSTANCE_TYPE
              value: codebox
          envFrom:
            - configMapRef:
                name: platform
            - secretRef:
                name: platform
          livenessProbe:
            exec:
              command:
                - /bin/sh
                - -c
                - celery -b $BROKER_URL inspect ping -d codebox_runner@$HOSTNAME
            initialDelaySeconds: 300
            periodSeconds: 180
